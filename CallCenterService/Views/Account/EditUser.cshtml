@model CallCenterService.ViewModels.EditUserViewModel

<h3>Edytuj użytkownika @Model.UserName</h3>
<div asp-validation-summary="All"></div>
<form asp-controller="Account" asp-action="EditUser">
    <input asp-for="UserId" type="hidden" />
    <div>
        <label asp-for="Email">Email:  </label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <br />
    <div>
        <label asp-for="FirstName">Imię:  </label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <br />
    <div>
        <label asp-for="LastName">Nazwisko:  </label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>
    <br />
    @*<div>
        <label asp-for="Address"></label>
        <input asp-for="Address" />
        <span asp-validation-for="Address"></span>
    </div>*@
    <div>
        <b>Rola:</b>
        <select asp-for="Role" asp-items="Model.Roles"></select>
    </div>
    <br />
    <div>
        <label asp-for="Specialization">Specjalizacja:</label>
        <input asp-for="Specialization" />
        <span asp-validation-for="Specialization"></span>
    </div>
    <br />
    <input type="submit" value="Edytuj  " />
</form>