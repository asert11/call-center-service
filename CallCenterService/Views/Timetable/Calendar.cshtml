<div id="calendar"></div>

<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Save event</h4>
            </div>
            <div class="modal-body">
                <button id="btnDelete" class="btn btn-default btn-sm pull-right">
                    <span class="glyphicon glyphicon-remove"></span> Remove
                </button>
                <button id="btnEdit" class="btn btn-default btn-sm pull-right" style="margin-right:5px;">
                    <span class="glyphicon glyphicon-pencil"></span> Edit
                </button>
                <p id="pDetails"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div id="myModalSave" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Save Event</h4>
            </div>
            <div class="modal-body">
                <form>
                    <!-- class="form-horizontal"-->
                    <input type="hidden" id="hdEventID" value="0" />
                    <div class="form-group">
                        <label>Subject</label>
                        <input type="text" id="txtSubject" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Start</label>
                        <div class="col-md-6 input-group date" id="dtp1">
                            <input type="text" id="txtStart" class="form-control" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label><input type="checkbox" id="chkIsFullDay" checked="checked" />  Is Full Day event</label>
                        </div>
                    </div>
                    <div class="form-group" id="divEndDate" style="display:none">
                        <label>End</label>
                        <div class="col-md-6 input-group date" id="dtp2">
                            <input type="text" id="txtEnd" class="form-control" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea id="txtDescription" rows="3" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Theme Color</label>
                        <select id="addThemeColor" class="form-control">
                            <option value="">Default</option>
                            <option value="red">Red</option>
                            <option value="blue">Blue</option>
                            <option value="black">Black</option>
                            <option value="green">Green</option>
                        </select>
                    </div>
                    <button type="button" id="btnSave" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section head {
    <link href='~/css/fullcalendar.min.css' rel='stylesheet' />
    <link href='~/css/fullcalendar.print.min.css' rel='stylesheet' media='print' />
    <link href='~/css/scheduler.min.css' rel="stylesheet" />
    <link href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.min.css' rel='stylesheet' />

    @*<script src='~/js/jquery.min.js'></script>*@
    <script src='~/js/moment.min.js'></script>
    <script src='~/js/fullcalendar.min.js'></script>
    <script src="~/js/scheduler.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
    <script src='~/js/pl.js'></script>

    <script>
        $(document).ready(function () {

            var view = 'timelineDay';
            var events = [];
            var resources = [];
            var selectedEvent = null;
            var isAdmin = false;
            CheckIfAdmin();
            FetchEventAndRenderCalendar(view);

            function FetchEventAndRenderCalendar(view) {
                CheckIfAdmin();
                var resources = [];
                $.ajax({
                    type: "GET",
                    url: '/Timetable/GetServicersAsResources',
                    success: function (data) {
                        $.each(data, function (i, v) {
                            resources.push({
                                id: v.servicerId,
                                title: v.firstName.concat(" ", v.lastName),
                                businessHours: [
                                    {
                                        dow: [1, 2, 3, 4, 5],
                                        start: '08:00',
                                        end: '16:00'
                                    }]
                            });
                        });
                        GenerateEvents(resources, view);
                    },
                    error: function (error) {
                        alert('failed');
                    }
                });
            }

            function GenerateEvents(resources, view) {
                var events = [];
                $.ajax({
                    type: "GET",
                    url: '/Timetable/GetRepairEvents',
                    success: function (data) {
                        $.each(data, function (i, v) {
                            events.push({
                                eventID: v.eventId,
                                title: v.subject,
                                description: v.description,
                                start: moment(v.start),
                                end: v.end != null ? moment(v.end) : null,
                                color: v.themeColor,
                                allDay: v.isFullDay,
                                resourceId: v.resourceId
                            });
                        });
                        GenerateCalendar(events, resources, view);
                    },
                    error: function (error) {
                        alert('failed');
                    }
                });
            }

            function GenerateCalendar(events, resources, view) {
                $('#calendar').fullCalendar('destroy');
                $('#calendar').fullCalendar({
                    lang: 'pl',
                    defaultDate: new Date(),
                    defaultView: 'agendaDay',
                    schedulerLicenseKey: 'CC-Attribution-NonCommercial-NoDerivatives',
                    header: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'agendaSevenDay'
                    },
                    views: {
                        agendaSevenDay: {
                            type: 'timeline',
                            duration: { weeks: 1 },
                            slotDuration: '24:00:00'
                        }
                    },
                    timeFormat: 'H(:mm)',
                    firstDay: 1,
                    contentHeight: 600,
                    resourceAreaWidth: '13%',
                    allDaySlot: false,
                    minTime: '07:00:00',
                    nowIndicator: true,
                    editable: true,
                    eventLimit: true, // allow "more" link when too many events
                    events: events,
                    resourceLabelText: 'Serwisant',
                    resources: resources,
                    eventClick: function (calEvent, jsEvent, view) {
                        selectedEvent = calEvent;
                        $('#myModel #eventTitle').text(calEvent.title);
                        var $description = $('<div/>');
                        $description.append($('<p/>').html('<b>Start: </b>' + calEvent.start.format("DD-MM-YYYY H:mm")));
                        if (calEvent.end != null) {
                            $description.append($('<p/>').html('<b>End: </b>' + calEvent.end.format("DD-MM-YYYY H:mm")));
                        }
                        $description.append($('<p/>').html('<b>Description: </b>' + calEvent.description));
                        $('#myModal #pDetails').empty().html($description);

                        $('#myModal').modal();
                    },
                    selectable: isAdmin,
                    //select: function (start, end) {
                    //    selectedEvent = {
                    //        eventId: 0,
                    //        title: '',
                    //        description: '',
                    //        start: start,
                    //        end: end,
                    //        allDay: false,
                    //        color: '',
                    //        resourceId: 0
                    //    };
                    //    openAddEditForm();
                    //    $('#calendar').fullCalendar('unselect');
                    //},
                    dayClick: function (date, jsEvent, view) {
                        $('#calendar').fullCalendar('changeView', 'timelineDay', date);
                    },
                    editable: true,
                    eventDrop: function (event) {
                        var data = {
                            EventId: event.eventID,
                            Subject: event.title,
                            Start: event.start.format('DD/MM/YYYY H:mm'),
                            End: event.end != null ? event.end.format('DD/MM/YYYY H:mm') : null,
                            Description: event.description,
                            ThemeColor: event.color,
                            ResourceId: event.resourceId
                        };
                        SaveEvent(data);
                    }
                });
                $('#calendar').fullCalendar('changeView', view);
            }

            $('#btnEdit').click(function () {
                openAddEditForm();
            });

            $('#btnDelete').click(function () {
                console.log(selectedEvent.eventID);
                if (selectedEvent != null && confirm('Jesteœ pewny?')) {
                    $.ajax({
                        type: "POST",
                        url: '/Timetable/DeleteRepairEvent',
                        data: { id: selectedEvent.eventID },
                        success: function (result) {
                            if (result) {
                                FetchEventAndRenderCalendar();
                                $('#myModal').modal('hide');
                            }
                        },
                        error: function () {
                            alert('Failed');
                        }
                    });
                }
            });

            $('#dtp1,#dtp2').datetimepicker({
                format: 'DD/MM/YYYY H:mm'
            });

            $('#chkIsFullDay').change(function () {
                if ($(this).is(':checked')) {
                    $('#divEndDate').hide();
                }
                else {
                    $('#divEndDate').show();
                }
            });

            function openAddEditForm() {
                if (selectedEvent != null) {
                    $('#hdEventID').val(selectedEvent.eventID);
                    $('#txtSubject').val(selectedEvent.title);
                    $('#txtStart').val(selectedEvent.start.format('DD/MM/YYYY H:mm'));
                    $('#chkIsFullDay').prop("checked", selectedEvent.allDay || false);
                    $('#chkIsFullDay').change();
                    $('#txtEnd').val(selectedEvent.end != null ? selectedEvent.end.format('DD/MM/YYYY H:mm') : '');
                    $('#txtDescription').val(selectedEvent.description);
                    $('#ddThemeColor').val(selectedEvent.color);
                }
                $('#myModal').modal('hide');
                $('#myModalSave').modal();
            }

            $('#btnSave').click(function () {
                if ($('#txtSubject').val().trim() == "") {
                    alert('Subject required');
                    return;
                }
                if ($('#txtStart').val().trim() == "") {
                    alert('Start date required');
                    return;
                }
                if ($('#chkIsFullDay').is(':checked') == false && $('#txtEnd').val().trim() == "") {
                    alert('End date required');
                    return;
                }
                else {
                    var startDate = moment($('#txtStart').val(), "DD/MM/YYYY H:mm").toDate();
                    var endDate = moment($('#txtEnd').val(), "DD/MM/YYYY H:mm").toDate();
                    if (startDate > endDate) {
                        alert('Invalid end date');
                        return;
                    }
                }

                var data = {
                    EventId: $('#hdEventID').val(),
                    Subject: $('#txtSubject').val().trim(),
                    Start: $('#txtStart').val().trim(),
                    End: $('#chkIsFullDay').is(':checked') ? null : $('#txtEnd').val().trim(),
                    Description: $('#txtDescription').val(),
                    ThemeColor: $('#addThemeColor').val()
                }
                SaveEvent(data);
            });

            function CheckIfAdmin() {
                $.ajax({
                    type: "GET",
                    url: '/Timetable/IsAdmin',
                    success: function (result) {
                        isAdmin = result;
                    },
                    error: function () {
                        alert('Failed');
                    }
                });
            }

            function SaveEvent(data) {
                $.ajax({
                    type: "POST",
                    url: '/Timetable/SaveRepairEvent',
                    data: data,
                    success: function (result) {
                        if (result) {
                            var view = $('#calendar').fullCalendar('getView').name;
                            FetchEventAndRenderCalendar(view);
                            $('#myModalSave').modal('hide');
                        }
                    },
                    error: function () {
                        alert('Failed');
                    }
                });
            }
        });
    </script>
    <style>

        body {
            margin: 40px 10px;
            padding: 0;
            font-family: "Lucida Grande",Helvetica,Arial,Verdana,sans-serif;
            font-size: 14px;
        }

        #calendar {
            max-width: 900px;
            margin: 50px auto;
        }
    </style>
}