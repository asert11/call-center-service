@model CallCenterService.ViewModels.AddProductFaultModel

@{
    ViewData["Title"] = "Create";
}

<h2>Dodaj usterkę</h2>

<form asp-action="Create">

    <table class="table">
        <thead>
            <tr>
                <th>
                    ID produktu
                </th>
                <th>
                    Nazwa
                </th>
                <th>
                    Typ
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductID</td>
                    <td>@product.Name</td>
                    <td>@product.Type</td>

                    <td><input asp-for="ProductId" value="@product.ProductID" type="radio" /></td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="ClientId" />
            <input type="hidden" asp-for="Status" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ClientDescription" class="col-md-2 control-label">Opis klienta:</label>
        <div class="col-md-10">
            <input asp-for="ClientDescription" class="form-control" />
            <span asp-validation-for="ClientDescription" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <br />
            <input type="submit" value="Dodaj" class="btn btn-default" />
        </div>
    </div>
</form>
<div>
    <a asp-action="Index">Wróć</a>
</div>
