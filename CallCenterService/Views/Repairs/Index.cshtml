@model IEnumerable<CallCenterService.Models.Repair>

@{
    ViewData["Title"] = "Index";
}

<h2>Your Tasks</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Servicer.ServicerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fault.ClientDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fault.Status)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartsPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Servicer.ServicerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fault.ClientDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fault.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartsPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RepairId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RepairId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RepairId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
